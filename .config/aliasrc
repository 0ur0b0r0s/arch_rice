    l="ls -la" \
    ll="ls -l" \ lss="~/.scripts/lss.sh" \
    ..="cd .." \
    ac="vim ~/.config/aliasrc && source ~/.config/aliasrc" \
    zc="vim ~/.zshrc" \
    ls="ls -hN --color=auto --group-directories-first" \
    grep="grep --color=auto" \
    diff="diff --color=auto" \
    sp="sudo pacman" \
    vim="nvim" \
    zp="nvim ~/.zprofile && source ~/.zprofile" \
    k="kubectl" \
    kc="kubectx" \
    kns="kubens" \
    koff="kubeoff" \
    kon="kubeon" \
    wp="watch kubectl get pods -o wide" \
    wap="watch kubectl get pods -o wide -A" \
    stern="bash ~/.scripts/quick-scripts/stern.sh" \
    sc="vim ~/.config/sxhkd/sxhkdrc" \
    nvpn="sudo openvpn --config /home/kr4k3n/Neogrid/terraform/iac-shared-openvpn-scripts/huawei-oem-tcp.ovpn" \
